<%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>

<%= form_with model: @book do |form| %>
  <div class="mt-3">
    <%= form.label :author %><br>
    <%= form.select :author_id, Author.all.collect { |author| [author.name, author.id] }, class: "form-control" %>
    <% @book.errors[:author_id].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :name %><br>
    <%= form.text_field :name, size: "100x1" %><br>
    <% @book.errors[:name].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "100x5" %><br>
    <% @book.errors[:description].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>

  <button class="btn btn-primary mt-3">
    <%= form.submit %>
  </button>
<% end %>